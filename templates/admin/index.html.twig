{% extends "base.html.twig" %}

{% block title  %} Administration {% endblock %}

{% block body %}
<div class="container"> 
<!-- affichage de message de succÃ¨s de l'enregistrement -->
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message}}
    </div>
    {% endfor %}

    <h1> Gestion des recettes </h1>
    <a href="{{ path('admin_create') }}" class="btn btn-success">Ajouter</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID </th>
                <th>Titre </th>
                <th>Action </th>
               
            </tr>
        </thead>
        <tbody>
            {% for recette in recettes %}
                <tr>
                    <td>{{ recette.id }}</td>
                    <td>{{ recette.titre }}</td>
                    <td>
                        <a href="{{ path('admin_edit', {id: recette.id}) }}" class="btn btn-primary">Editer </a>
                        <button class="btn btn-danger">Supprimer </button>
                    </td>
                </tr>

            {% endfor %}
        </tbody>
        
    
    </table>
</div>
{% endblock %} 